                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "text": { "type": "string", "description": "Texto acima do carrossel." },
                    "products": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "title": { "type": "string" },
                                "description": { "type": "string" },
                                "image_url": { "type": "string", "format": "uri" },
                                "price": { "type": "number", "minimum": 0 },
                                "promo_price": { "type": ["number", "null"] },
                                "product_id": { "type": "string" }
                            },
                            "required": ["title", "description", "image_url", "price", "product_id"]
                        }
                    }
                },
                "required": ["text", "products"]
            }
        }
    },
